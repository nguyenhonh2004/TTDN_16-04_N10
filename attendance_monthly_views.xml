<odoo>

  <!-- LIST -->
  <record id="view_bj_att_monthly_list" model="ir.ui.view">
    <field name="name">bj.attendance.monthly.list</field>
    <field name="model">bj.attendance.monthly</field>
    <field name="arch" type="xml">
      <list string="Tổng hợp công theo tháng">
        <field name="employee_id"/>
        <field name="month"/>
        <field name="year"/>
        <field name="total_work_hours"/>
        <field name="total_days"/>
        <field name="total_ot_hours"/>
        <field name="total_late"/>
        <field name="total_early"/>
        <field name="total_camera"/>
        <field name="total_manual"/>
        <field name="total_device"/>
      </list>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_bj_att_monthly_form" model="ir.ui.view">
    <field name="name">bj.attendance.monthly.form</field>
    <field name="model">bj.attendance.monthly</field>
    <field name="arch" type="xml">
      <form string="Tổng hợp công theo tháng">
        <sheet>
          <group>
            <field name="employee_id"/>
            <field name="month"/>
            <field name="year"/>
          </group>

          <group string="Tổng hợp">
            <field name="total_work_hours" readonly="1"/>
            <field name="total_days" readonly="1"/>
            <field name="total_ot_hours" readonly="1"/>
          </group>

          <group string="Vi phạm">
            <field name="total_late" readonly="1"/>
            <field name="total_early" readonly="1"/>
          </group>

          <group string="Nguồn chấm công">
            <field name="total_camera" readonly="1"/>
            <field name="total_manual" readonly="1"/>
            <field name="total_device" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- SEARCH -->
  <record id="view_bj_att_monthly_search" model="ir.ui.view">
    <field name="name">bj.attendance.monthly.search</field>
    <field name="model">bj.attendance.monthly</field>
    <field name="arch" type="xml">
      <search>
        <field name="employee_id"/>
        <field name="year"/>
        <field name="month"/>
      </search>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_bj_att_monthly" model="ir.actions.act_window">
    <field name="name">Tổng hợp công theo tháng</field>
    <field name="res_model">bj.attendance.monthly</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_bj_att_monthly_search"/>
  </record>

  <!-- MENU -->
  <menuitem id="menu_bj_root" name="BJ HR" sequence="10"/>
  <menuitem id="menu_bj_att_monthly"
            name="Tổng hợp công"
            parent="menu_bj_root"
            action="action_bj_att_monthly"
            sequence="20"/>

</odoo>
